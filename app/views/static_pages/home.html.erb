<div class="container-fluid clear-nav">

<section id='home'>
  <div class='row'>  
		<div class='col-sm-8'>
    	<%= image_tag('hero_logo.png', alt: "Nationwide Mortgage Group", id: 'hero-logo') %>
    </div>    	
    <p id='hero-phone'>1(800)540-7079</p> 
  </div>
  
  <div class='table'> 
  	<div class='row tr'>
  		<div id='hero-button' class='td text-center vert-center'>
  			<%= link_to "Get your quote", apply_path, class: 'button-style' %>			
  		</div>
  		<div class='td'>
  			<h1 id='hero-blurb' class="text-center">  
       		Whether you're buying a home or refinancing, 
      		<strong>Nationwide Mortgage Group</strong> is here to find you the 
      		<em>lowest rates</em> & <em>lowest closing costs</em> on your mortgage.
    		</h1>
  		</div>
  	</div> <!-- end .row -->
  </div>    <!-- close .table -->   
</section>

<!-- Why Nationwide? -->  
<section>     
	<div class="pitch">
		<div class="row">
			<div class="col-sm-3">
				<%= image_tag('keys_icon.png', alt: 'icon: house keys', class: 'img-sm img-center pitch-icon') %>
			</div>
			<div class="col-sm-6">
				<h2 class="text-center">You don't need perfect credit or a lot up front to get the home you want</h2>
    		<p>
     			It's easier than you think to qualify with our Government 
      		& non-agency Fresh Start loan programs:
    		</p>
			</div>
			<div class="col-sm-3 hidden-xs"></div>	
    </div> <!-- end .row -->
    <div class="row">
    	<div class="col-xs-6">
    		<ul class="pull-right">
       		<li>FHA loans</li>
        	<li>HARP loans</li>
        	<li>VA loans</li>
        	<li>USDA Rural Housing</li>
        	<li>& more</li>
     	 	</ul>
    	</div>
    	<div class="col-xs-4 text-center">
    		<%= image_tag('underwater_house_icon.png', alt: 'icon', class: 'img-xs img-center') %>
       	<small>Even underwater homeowners can refinance with HARP options</small>
    	</div>
    </div> <!-- end .row -->
	</div> <!-- end .pitch -->

	<!-- pitch 2 -->
	<div class='pitch'>
		<div class='row'>
			<div class="col-sm-3">
				<%= image_tag('piggybank_icon.png', alt: 'icon: piggy bank', class: "img-sm img-center pitch-icon") %>
			</div>
			<div class="col-sm-6">
				<h2 class="text-center">
					Take advantage of mortgage rates at their lowest in decades!
				</h2>
    		<p>
     			Free up cash for life's other big milestones by refinancing
        	your mortgage. We can help you save, consolidate debt, or cash out.
    		</p>
			</div>
			<div class="col-sm-3 hidden-xs">
				<%= image_tag('grad_car_icon.png', alt: 'icon: graduate and new car', class: "img-sm") %>
			</div>	
		</div> <!-- end .row -->
	</div>   <!-- end .pitch -->	  
      
  <!-- pitch 3 -->    
  <div class='pitch'>       
  	<div class="row">
			<div class="col-sm-3">
				<%= image_tag('brain_icon.png', alt: 'icon: brain', class: "img-sm img-center pitch-icon") %>
			</div>
			<div class="col-sm-6">
				<h2 class="text-center">Concierge Mortgage Services</h2>
    		<p>
     			We're experts. We can help you navigate the options and find
      		the best deal for you. Call now or click below to get a
      		quote and get started!
    		</p>
			</div>
			<div class="col-sm-3 hidden-xs"></div>	
    </div> <!-- end .row -->
	</div>   <!-- close .pitch -->
      
  <%= link_to "Get your quote", apply_path, class: 'button-style' %>
  <span class='clear-btn'></span>   
      
</section>

</div>    <!-- close .center-wrap -->